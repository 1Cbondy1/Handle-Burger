<h1 id="title">Welcome to Handle-Burger!</h1>
<br><br>

<img src="http://www.myiconfinder.com/uploads/iconsets/256-256-50d2bb24a01a3c32510470c6cf675782-burger.png" alt="burger">

<span id="not-devoured">
  <h2>Burgers waiting to be devoured:</h2>
  <ul class="no-bullets">
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
      {{/unless}}
    {{/each}}
  </ul>
</span>

<span id="devoured">
  <h2>Burgers that have been devoured:</h2>
  <ul class="no-bullets">
    {{#each burgers}}
      {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
      {{/if}}
    {{/each}}
  </ul>
</span>

<div id="order">
  <h2>We cook to order:</h2>
  <form class="create-form">
    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>
    <div class="form-group">
      <br>
      <input type="radio" name="devoured" value="1" checked> Devoured!<br>
      <input type="radio" name="devoured" value="0"> Not Yet Devoured
    </div>
    <button type="submit">Add Burger</button>
  </form>
</div>